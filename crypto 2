#include <stdio.h>
#include <string.h>
#include <ctype.h>

char *cipher = "abcdefghijklmnopqrstuvwxyz";

void encrypt(char *plaintext) {
    int i;
    for (i = 0; i < strlen(plaintext); i++) {
        if (isalpha(plaintext[i])) {
            if (isupper(plaintext[i]))
                printf("%c", toupper(cipher[tolower(plaintext[i]) - 'a']));
            else
                printf("%c", cipher[plaintext[i] - 'a']);
        } else {
            printf("%c", plaintext[i]);
        }
    }
    printf("\n");
}

void decrypt(char *ciphertext) {
    int i;
    for (i = 0; i < strlen(ciphertext); i++) {
        if (isalpha(ciphertext[i])) {
            if (isupper(ciphertext[i]))
                printf("%c", toupper('a' + (ciphertext[i] - 'a' + 1) % 26));
            else
                printf("%c", 'a' + (ciphertext[i] - 'a' + 1) % 26);
        } else {
            printf("%c", ciphertext[i]);
        }
    }
    printf("\n");
}

int main() {
    char plaintext[] = "Hello, World!";
    char ciphertext[] = "Urzzb, Jbeyq!";
    
    printf("Plaintext: %s\n", plaintext);
    encrypt(plaintext);
    
    printf("Ciphertext: %s\n", ciphertext);
    decrypt(ciphertext);
    
    return 0;
}

OUTPUT:-

Plaintext: Hello, World!
Hello, World!
Ciphertext: Urzzb, Jbeyq!
Vsaac, Kcfzr!

--------------------------------
Process exited after 0.05465 seconds with return value 0
