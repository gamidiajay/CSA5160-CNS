#include <stdio.h>
#include <string.h>
#include <ctype.h>

char *cipher = "abcdefghijklmnopqrstuvwxyz";

void generate_key(char *key, int length) {
    int i;
    for (i = 0; i < length; i++) {
        key[i] = cipher[i % strlen(cipher)];
    }
    key[i] = '\0';
}

void encrypt(char *plaintext, char *key) {
    int i;
    for (i = 0; i < strlen(plaintext); i++) {
        if (isalpha(plaintext[i])) {
            if (isupper(plaintext[i]))
                printf("%c", toupper(cipher[(plaintext[i] - 'A' + key[i % strlen(key)] - 'a') % 26]));
            else
                printf("%c", cipher[(plaintext[i] - 'a' + key[i % strlen(key)] - 'a') % 26]);
        } else {
            printf("%c", plaintext[i]);
        }
    }
    printf("\n");
}

void decrypt(char *ciphertext, char *key) {
    int i;
    for (i = 0; i < strlen(ciphertext); i++) {
        if (isalpha(ciphertext[i])) {
            if (isupper(ciphertext[i]))
                printf("%c", toupper(cipher[(ciphertext[i] - 'A' - key[i % strlen(key)] - 'a' + 26) % 26]));
            else
                printf("%c", cipher[(ciphertext[i] - 'a' - key[i % strlen(key)] - 'a' + 26) % 26]);
        } else {
            printf("%c", ciphertext[i]);
        }
    }
    printf("\n");
}

int main() {
    char plaintext[] = "Hello, World!";
    char key[] = "key";
    char ciphertext[100];
    
    generate_key(key, strlen(plaintext));
    
    printf("Plaintext: %s\n", plaintext);
    encrypt(plaintext, key);
    
    printf("Key: %s\n", key);
    
    decrypt(plaintext, key);
    
    return 0;
}
