#include <stdio.h>
#include <string.h>
#include <ctype.h>

void caesarCipher(char *message, int shift);

int main() {
    char message[100];
    int shift;

    printf("Enter a message to encrypt: ");
    fgets(message, sizeof(message), stdin);
    message[strcspn(message, "\n")] = '\0';

    printf("Encrypting the message in all shifts (1 to 25):\n");

    for (shift = 1; shift <= 25; shift++) {
        printf("Shift %d: ", shift);
        caesarCipher(message, shift);
        printf("\n");
    }

    return 0;
}

void caesarCipher(char *message, int shift) {
    int i;
    char ch;

    for (i = 0; i < strlen(message); i++) {
        ch = message[i];

        if (isalpha(ch)) {
            if (isupper(ch)) {
                ch = ((ch - 'A' + shift) % 26) + 'A';
            }
            else if (islower(ch)) {
                ch = ((ch - 'a' + shift) % 26) + 'a';
            }
        }
        printf("%c", ch);
    }
}


